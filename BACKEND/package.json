{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "npm install && npx prisma generate && npx tsc && cp -r src/generated dist/",
    "start": "npx prisma migrate deploy && node ./dist/index.js",
    "dev": "nodemon --watch src --exec tsx src/index.ts",
    "migrate:passwords": "npx ts-node src/scripts/migratePasswords.ts",
    "update:password": "npx ts-node src/scripts/updatePassword.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.0",
    "socket.io": "^4.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/nodemon": "^1.19.6",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.11",
    "prisma": "^6.19.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
